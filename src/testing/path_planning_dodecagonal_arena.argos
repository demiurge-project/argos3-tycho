          <placement idx="9" position="-2,0,2" look_at="0,0,0" lens_focal_length="20" />
          <placement idx="10" position="-0.767635,-0.840317,0.923515" look_at="-0.767266,-0.849514,-0.0764431" lens_focal_length="20" />
        </camera>
    </qt-opengl>
  </visualization>

</argos-configuration>
